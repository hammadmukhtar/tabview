<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tabview_orange"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@color/tabview_white"
                android:centerColor="@color/tabview_white"
                android:endColor="@color/tabview_bg"
                android:type="linear" />
            <stroke android:width="0.5dp" android:color="@color/tabview_light_grey"  />
            <padding android:bottom="10dp"
                android:top="10dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
</layer-list>